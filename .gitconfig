[user]
  name = Gaspar Rey
  email = info@gasparrey.com
[alias]
  ll = log --pretty=format:\"%C(dim green)%h %ad%Creset %C(cyan)%an%Creset%C(auto)%d%Creset %s\" --date=short --graph --all
  l = "!git ll -15"
  lf = log --format=fuller
  co = checkout
  c = "!git commit -m "
  d = diff
  ds = diff --staged
  s = status
  m = merge
  a = "!git add . && git status"
  f = "!git fetch && git l -10"
  p = "!git push && git l -10"
  pl = "!git pull && git l -10"
[color]
  ui = true
[core]
  editor = mvim
  excludesfile = ~/.gitignore_global
  protectHFS = true
  protectNTFS = true
[credential]
  helper = osxkeychain
[receive]
  fsckObjects = true
